= javascript_include_tag 'create_chat', 'sjcl'

.content_pane
  .form-horizontal
    %fieldset.fieldset_with_header
      %legend Create a Chat Room
      .control-group
        %label.control-label{for: 'password'} Password
        .controls
          = password_field_tag :password, nil, class: 'input-xxlarge'
          %p.help_block Your encryption key
      .control-group
        %label.control-label{for: 'password'} Username
        .controls
          = text_field_tag :username_display, nil, class: 'input-xxlarge', limit: 30
          %p.help_block Username to display on message
      .control-group
        %label.control-label{for: 'text'} Message
        .controls
          = text_area_tag :text, nil, class: 'input-xxlarge drop_message'
          -#%p.help_block Help text here
      .form-actions
        = button_tag 'Create Chat Room', id: 'create_chat', class: 'btn btn-primary'

  = form_tag nil, {id: 'create_form'} do
    = hidden_field_tag :encrypted_message
    = hidden_field_tag :username
